#! /usr/bin/env bash

watch_file nix/devshell.nix

# try to use flake initially, fallback to non-flake use otherwise
if nix flake metadata &>/dev/null; then
    use flake
else
    use nix
fi

# Generate nixd LSP configuration automatically
# This uses the system-wide direnv library installed via home-manager
#use_nixd
